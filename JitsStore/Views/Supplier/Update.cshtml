@model JitsStore.ViewModel.Suppliers.SupplierUpdateViewModel
@{

}
<h1>Update</h1>
<form method="post" action="Update" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Supplier Id</label>
        <input type="text" class="form-control" asp-for="SupplierId" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">CompanyName</label>
        <input type="text" class="form-control" asp-for="CompanyName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Country</label>
        <input type="text" class="form-control" asp-for="Country">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="Supplier">
        Delete
    </button>
</form>
