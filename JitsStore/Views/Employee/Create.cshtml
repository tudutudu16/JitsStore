@model JitsStore.ViewModel.Employees.EmployeeAddViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Add Employee</h1>
<form method="post" action="Create" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">BirthDate</label>
        <input type="text" class="form-control" asp-for="BirthDate">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">ContactType</label>
        <input type="text" class="form-control" asp-for="ContactType">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Salary</label>
        <input type="text" class="form-control" asp-for="Salary">
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
