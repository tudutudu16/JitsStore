@model JitsStore.Models.UpdateCategoriesViewModel

@{
}

<h1>Edit Category</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Category Id</label>
        <input type="text" class="form-control" asp-for="CategoryId" readonly>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Category Name</label>
        <input type="text" class="form-control" asp-for="CategoryName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="Categories">Delete</button>
</form>