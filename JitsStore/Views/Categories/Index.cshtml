@model List<JitsStore.Models.Category>

@{
}

<h1>Categories</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Description</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.CategoryId</td>
				<td>@category.CategoryName</td>
				<td>@category.Description</td>
				<td><a href="View/@category.CategoryId">View</a></td>
			</tr>
		}
	</tbody>
</table>